{
    "name": "order-processing-service",
    "version": "1.0.0",
    "description": "",
    "main": "dist/api/server.js",
    "_moduleAliases": {
        "@": "dist"
    },
    "scripts": {
        "start": "npm run build && node dist/api/server",
        "dev": "ts-node -r tsconfig-paths/register src/api/server",
        "build": "tsc",
        "test": "vitest",
        "integration": "vitest --config vitest.integration.config.ts",
        "migration:generate": "npm run build && cross-var typeorm migration:generate -d dist/infra/typeorm/data-source src/infra/typeorm/migrations/$npm_config_name",
        "migration:run": "npm run build && node -r dotenv/config -r module-alias/register node_modules/typeorm/cli migration:run -d dist/infra/typeorm/data-source"
    },
    "private": true,
    "devDependencies": {
        "@eslint/js": "^9.39.1",
        "@testcontainers/postgresql": "^11.9.0",
        "@types/express": "^5.0.6",
        "@types/node": "^24.10.1",
        "@types/supertest": "^6.0.3",
        "eslint": "^9.39.1",
        "eslint-config-prettier": "^10.1.8",
        "globals": "^16.5.0",
        "prettier": "^3.7.3",
        "supertest": "^7.1.4",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.5.3",
        "typescript-eslint": "^8.48.0",
        "vitest": "^4.0.14",
        "vitest-tsconfig-paths": "^3.4.1"
    },
    "dependencies": {
        "class-validator": "^0.14.3",
        "dotenv": "^17.2.3",
        "express": "^5.2.1",
        "module-alias": "^2.2.3",
        "pg": "^8.16.3",
        "reflect-metadata": "^0.2.2",
        "tsyringe": "^4.10.0",
        "typeorm": "^0.3.27",
        "uuid": "^13.0.0",
        "zod": "^4.1.13"
    }
}
